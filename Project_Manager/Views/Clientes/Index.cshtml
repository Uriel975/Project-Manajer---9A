
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var Clientes = (List<Project_Manager.Services.BO.TblClienteBO>)ViewBag.EmpleadoList;
}
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Tablas de Clientes</h1>
            <p class="mb-4">Esta tabla contiene todos los datos basicos de todos los clientes.</p>
            <!-- DataTales Example -->
            @if (Clientes.Count > 0)
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Datos de los clientes</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                                <thead>

                                    <tr>
                                        <th scope="col">Nombre Empresa</th>
                                        <th scope="col">Representante</th>
                                        <th scope="col">Telefono</th>
                                        <th scope="col">Correocontacto</th>
                                        <th>Accesorios</th>
                                    </tr>

                                </thead>

                                <tbody>

                                    @foreach (Project_Manager.Services.BO.TblClienteBO item in Clientes)
                                    {
                                        <tr>
                                            <td>@item.NombreEmpresa</td>
                                            <td>@item.NombreRepresentante @item.ApellidoPRepresentante</td>
                                            <td align="center">@item.TelefonoRepresentante</td>
                                            <td align="center">@item.correo</td>
                                            <td align="center">
                                                <button type="button" onclick="Client.evts.getClientInfo('@item.IDCliente', '@item.NombreRepresentante', '@item.ApellidoPRepresentante','@item.ApellidoMRepresentante', '@item.TelefonoRepresentante', '@item.correo', '@item.FKUsuario')" class="btn btn-warning btn-xs" data-toggle="tooltip" title="Editar"><i class="fa fa-edit"></i></button>
                                                <button type="button" onclick="Client.evts.updateStatus('@item.IDCliente','0')" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <h2> Sin resultados</h2>

            }

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; FernandoISK 2019</span>
            </div>
        </div>
    </footer>


    <!-- End of Footer -->

</div>

<div class="modal fade" tabindex="-1" role="dialog" id="mdlDetail">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <form id="frmCreate" class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="col-12 modal-title text-center" id="employeeStr">Nuevo Producto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Nombre del Representante</label>
                            <input type="text" autocomplete="off" class="form-control" name="txtNombre" id="txtNombre" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Apellido paterno</label>
                            <input type="text" autocomplete="off" class="form-control" name="txtApellidoP" id="txtApellidoP" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>apellido Materno</label>
                            <input type="text" autocomplete="off" class="form-control" name="txtApellidoM" id="txtApellidoM" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Correo Electronico</label>
                            <input type="text" autocomplete="off" class="form-control" name="txtCorreo" id="txtCorreo" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Telefono</label>
                            <input type="text" autocomplete="off" class="form-control" name="txtCelular" id="txtCelular" />
                        </div>
                        <div class="form-group col-md-12">
                            <input type="hidden" autocomplete="off" class="form-control" name="txtUsuario" id="txtUsuario" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-whitesmoke br">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Scripts/Client.js"></script>
<script>
    $(function () {
        Client.init();
    });
</script>