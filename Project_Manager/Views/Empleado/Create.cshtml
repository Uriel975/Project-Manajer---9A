                        @if (Proyectos.Count != 0)
                        {
                            <div class="col-md-6">
                                <label for="cmbEstacionesBio">Empresa dueña*</label>
                                <select class="form-control" id="cmbEstacionesBio" name="cmbEstacionesBio" onchange="det.estacionesChange(this)">
                                    <option value="0">-Seleccionar una estación</option>
                                    @foreach (var est in Proyectos)
